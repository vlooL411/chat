{
	"setupFiles": ["<rootDir>/setup.ts"],
	"roots": ["<rootDir>"],
	"globals": { "ts-jest": { "tsconfig": "tsconfig.jest.json" } },
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
	"testPathIgnorePatterns": ["<rootDir>[/\\\\](node_modules|.next)"],
	"transformIgnorePatterns": ["node_modules"],
	"transform": { "^.+\\.(tsx?)$": "ts-jest" },
	"watchPlugins": [
		"jest-watch-typeahead/filename",
		"jest-watch-typeahead/testname"
	],
	"moduleNameMapper": {
		"\\.(css|less|sass|scss)$": "<rootDir>/../mocks/css.ts",
		"components/(.*)": "<rootDir>/../components/$1",
		"mocks/(.*)": "<rootDir>/../mocks/$1",
		"hooks/(.*)": "<rootDir>/../hooks/$1",
		"pages": "<rootDir>/../pages",
		"apolloclient/(.*)": "<rootDir>/../apolloclient/$1",
		"apolloclient": "<rootDir>/../apolloclient",
		"@frontend/types": "<rootDir>/../generated/src/types.ts",
		"@common/utils": "<rootDir>/../utils"
	}
}
