{
	"version": "0.1.1",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prevbuild": "yarn",
		"prevcommit": "yarn prettier && yarn lint",
		"frontend:dev": "yarn workspace @chat/frontend dev",
		"backend:dev": "yarn workspace @chat/backend dev",
		"rm": "lerna run rm",
		"rm:node_modules": "rmdir /s /q node_modules",
		"build": "lerna run build",
		"prettier": "npx prettier --ignore-path .gitignore --write .",
		"lint": "eslint --ignore-path .gitignore **/*.{js,ts,tsx} --fix",
		"lint:quiet": "yarn lint --quiet"
	},
	"devDependencies": {
		"lerna": "^3.22.1",
		"prettier": "^2.2.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint": "^7.14.0",
		"@typescript-eslint/parser": "^4.9.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"eslint-plugin-react": "^7.21.5"
	},
	"workspaces": [
		"frontend",
		"frontend/**/*",
		"backend",
		"common/**/*",
		"storybook"
	]
}
