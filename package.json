{
	"version": "0.1.1",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prevbuild": "yarn && npm run build:dist",
		"prevcommit": "yarn prettier && yarn lint",
		"frontend:dev": "yarn workspace @chat/frontend dev",
		"backend:dev": "yarn workspace @chat/backend dev",
		"build": "lerna run build",
		"build:dist": "lerna run build:dist",
		"build:full": "yarn build:dist && yarn build",
		"prettier": "npx prettier --ignore-path .gitignore --write .",
		"prettier:check": "prettier --ignore-path .gitignore --check .",
		"lint": "eslint --ignore-path .gitignore **/*.{js,ts,tsx} --fix",
		"lint:quiet": "eslint --ignore-path .gitignore **/*.{js,ts,tsx} --quiet --fix"
	},
	"devDependencies": {
		"lerna": "^3.22.1",
		"prettier": "^2.2.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint": "^7.14.0",
		"@typescript-eslint/parser": "^4.8.2",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"eslint-plugin-react": "^7.21.5"
	},
	"resolutions": {
		"typescript": "^4.1.2",
		"@types/node": "^14.14.10",
		"@apollo/client": "^3.2.9"
	},
	"workspaces": [
		"frontend",
		"frontend/**/*",
		"backend",
		"common/**/*",
		"storybook"
	]
}
